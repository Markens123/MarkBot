{
    "compilerOptions": {
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "module": "ESNext",
      "target": "ES2020",
      "noImplicitAny": false,
      "sourceMap": true,
      "outDir": "build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "forceConsistentCasingInFileNames": true,
      "lib": [
        "ES2021",
      ],
      "moduleResolution": "node"
    },
    "exclude": [
      "node_modules",
      "./node_modules",
      "./node_modules/*",
      "./node_modules/@types/node/index.d.ts",
    ]
}
