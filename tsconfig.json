{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "module": "ESNext",
      "target": "ES2020",
      "noImplicitAny": false,
      "sourceMap": true,
      "outDir": "build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "forceConsistentCasingInFileNames": true,
      "lib": [
        "ES2020",
      ],
      "moduleResolution": "node"
    },
    "exclude": [
      "node_modules"
    ]
}